<resources>

    <dimen name="margin">8dip</dimen>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="colorAccent">@color/darkGreen</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuColor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/iconColor</item>
        <item name="android:textColorSecondary">@color/iconColor</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- General styles -->

    <style name="recyclerview">
        <item name="android:id">@id/item_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:background">@color/darkBackground</item>
    </style>

    <style name="edit_text" parent="edit_label">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:textCursorDrawable">@android:color/black</item>
    </style>

    <style name="edit_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:backgroundTint">@color/darkGreen</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:tint">@color/iconColor</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Ingredient and recipe view frame layout style -->

    <style name="content_frame">
        <item name="android:id">@id/frameLayout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dip</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <!-- Ingredient and recipe view deletion backbar styles -->

    <style name="delete_frame">
        <item name="android:id">@id/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/deleteRed</item>
    </style>

    <style name="delete_icon">
        <item name="android:src">@android:drawable/ic_menu_delete</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="delete_text">
        <item name="android:text">@string/delete</item>
        <item name="android:textColor">#f5f5f5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14dip</item>
    </style>

    <!-- Ingredient and recipe view styles -->

    <style name="item_frame">
        <item name="android:id">@id/foreground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/ivory</item>
    </style>

    <style name="item_pic">
        <item name="android:id">@id/pic</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:contentDescription">@string/pic</item>
    </style>

    <style name="item_name">
        <item name="android:id">@id/name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_desc">
        <item name="android:id">@id/desc</item>
        <item name="android:text">@string/desc</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:textSize">12dip</item>
        <item name="android:maxLines">6</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ing_button">
        <item name="android:tint">@color/green</item>
        <item name="android:background">@null</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Switches">
        <item name="android:colorControlActivated"> #46bdbf </item>
        <item name="colorSwitchThumbNormal"> #f1f1f1 </item>
        <item name="android:colorForeground"> #42221f1f</item>
    </style>

</resources>
