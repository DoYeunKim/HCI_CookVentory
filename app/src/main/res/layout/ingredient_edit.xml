<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ing_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_background"
    android:elevation="3dp"
    app:layout_constrainedHeight="true">

    <EditText
        android:id="@+id/editName"
        style="@style/edit_text"
        android:backgroundTint="@android:color/darker_gray"
        android:paddingTop="30dp"
        android:inputType="text"
        android:theme="@style/customEditText"
        android:textCursorDrawable="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/editQuery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/editQuery"
        style="@style/edit_text"
        android:backgroundTint="@android:color/darker_gray"
        android:inputType="text"
        android:theme="@style/customEditText"
        android:textCursorDrawable="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/editDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editName" />

    <EditText
        android:id="@+id/editDesc"
        style="@style/edit_text"
        android:inputType="textMultiLine"
        android:theme="@style/customEditText"
        android:backgroundTint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/black"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editQuery" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDesc">

        <Button
            android:id="@+id/done"
            style="@style/button"
            android:text="@string/done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancel" />

        <Button
            android:id="@+id/cancel"
            style="@style/button"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@id/done"
            app:layout_constraintStart_toEndOf="@id/delete" />

        <Button
            android:id="@+id/delete"
            style="@style/button"
            android:text="@string/delete"
            app:layout_constraintEnd_toStartOf="@id/cancel"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>